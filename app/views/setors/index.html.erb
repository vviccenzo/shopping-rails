<p id="notice"><%= notice %></p>

<h1>Setors</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @setors.each do |setor| %>
      <tr>
        <td><%= setor.nome %></td>
        <td><%= link_to 'Produtos', setor ,class:"btn btn-default"%></td>
        <td><%= link_to 'Editar', edit_setor_path(setor), class:"btn btn-default" %></td>
        <td><%= link_to 'Delete', setor, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar novo setor', new_setor_path, class:"btn btn-default" %>

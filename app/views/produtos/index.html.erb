<%# #Se existir uma mensagem de erro/sucesso, será renderizada a mensagem de erro/sucesso. %>
<% if flash[:notice] %>
    <div class="alert alert-success">
    <%# #Vai renderizar a mensagem de sucesso. %>
        <%= flash[:notice] %>
    </div>
<% end %>

<div class="alert alert-info">
    <h4 class="alert-heading">Produtos adicionados recentemente</h4>
</div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td>Nome</td>
                    <td>Descrição</td>
                    <td>Setor</td>
                    <td>Preço</td>
                    <td>Quantidade</td>
                    <td colspan="1"></td>
                </tr>
            </thead>
            <tbody>
                <%= render @produtos %>
            </tbody>
        </table>
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Produto com desconto</h4>
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td>Nome</td>
                    <td>Descrição</td>
                    <td>Preço</td>
                    <td>Quantidade</td>
                    <td>Setor</td>
                </tr>
            </thead>
            <tbody>
                <%= render @produto_menor_preco%>
            </tbody>
        </table>
    </div>